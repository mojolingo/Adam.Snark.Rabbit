= simple_form_for(@profile) do |f|
  = f.error_notification

  .inputs
    = f.input :name
    = f.simple_fields_for :email_addresses do |builder|
      = render 'email_address_fields', f: builder
    .links
      = link_to_add_association 'Add Email Address', f, :email_addresses
    = f.simple_fields_for :jids do |builder|
      = render 'jid_fields', f: builder
    .links
      = link_to_add_association 'Add JID', f, :jids
    = f.input :futuresimple_username, label: 'Futuresimple Username'
    = f.input :futuresimple_password, label: 'Futuresimple Password'

  .actions
    = f.button :submit
