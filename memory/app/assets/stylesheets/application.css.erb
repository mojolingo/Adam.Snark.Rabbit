 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree . 
*/
img { max-width: 100%; }

.arabbit .image, .caller .image {
    width: 100px;
}

* {
	font-family: 'Open Sans', Helvetica, sans-serif !important;
	text-rendering: optimizeLegibility;
}

body {
    background-image: url(<%= image_path('white_wall_hash.png') %>);
}

#messages {
    padding: 20px;
}

.message .bubble {
    background-color: white;
    border-radius: 10px;
    font-size: 1.2em;
    line-height: 1.0em;
    padding: 20px;
    max-width: 575px;
}

#messages .message .big-text p {
    font-size: 1.6em;
    line-height: 1.2em;
}

#messages .message .bubble .separator {
    display: block;
    width: 40px;
    height: 1px;
    border-bottom: 2px groove rgba(0,0,0,0.1);
    padding-bottom: 10px;
    margin-bottom: 20px;
}

.message .bubble p:last-of-type {
    margin-bottom: 0;
}

.row_separator{
    margin-bottom: 20px;
    border-bottom: 2px groove white;
    padding-bottom: 20px;
    width: 35%;
    margin-left: auto;
    margin-right:auto;
}

#messages .caller .bubble {
    float: right;
	background-color: rgb(126, 126, 219);
	color: white;
	text-shadow: 1px 1px rgba(0,0,0,0.5);
}

#messages .arabbit .bubble {
    float: left;
	background-color: rgba(150, 21, 48, 0.7);
	color: white;
	text-shadow: 1px 1px rgba(0,0,0,0.5);
}

.caller .triangle {
    float: right;
    position: relative;
    top: 15px;
    display: block;
    border-color: transparent transparent transparent rgb(126, 126, 219);
    border-style: solid;
    border-width: 10px;
    height:0;
    width:0;
    z-index:100;
}

.arabbit .triangle {
    position: relative;
    float: left;
    display: block;
    content: "";
    border-color: transparent rgba(150, 21, 48, 0.7) transparent transparent;
    border-style: solid;
    border-width: 10px;
    height:0;
    width:0;
    top: 15px;
    /*bottom: 27px;*/
    /*right:19px;*/
    z-index:100;
}

.arabbit > .row, .caller > .row {
    margin-left: 0;
}

.typing {
    height: 26px;
    width: 20px;
}

.dot {
    font-size: 1.2em;
    color: #961530;
}

.avatar {
    height: 100px;
    width: 100px;
}

.avatar.ada {
    background-image: url(<%= image_path('ada.jpg') %>);
	background-size: cover;
}

.avatar.rabbit {
	background-image: url(<%= image_path('arabbit.jpeg') %>);
	background-size: cover;
}

#sidebar {
	background-color: white;
	padding: 10px;
	border-radius: 5px;
}

.suggestions ul li {
  font-size: 1.3em;
  padding-bottom: 10px;
  font-weight: bold;
}
